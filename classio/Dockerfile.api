FROM oven/bun:latest

WORKDIR /app

# Copy package files for dependency installation
COPY package.json bun.lock ./
COPY packages/ ./packages/
COPY tsconfig.json ./

# Install dependencies
RUN bun install

# Expose API port
EXPOSE 3000

# Run API server
CMD ["bun", "run", "packages/api-server/src/index.ts"]
