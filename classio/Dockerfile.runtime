FROM oven/bun:latest

WORKDIR /app

# Copy package files for dependency installation
COPY package.json bun.lock ./
COPY packages/ ./packages/
COPY tsconfig.json ./

# Install dependencies
RUN bun install

# Expose runtime port
EXPOSE 3001

# Run runtime worker
CMD ["bun", "run", "packages/runtime-worker/src/index.ts"]
